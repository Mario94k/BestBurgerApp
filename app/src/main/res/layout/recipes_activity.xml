<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="8dp"
    tools:context=".RecipesActivity">

    <ImageView
        android:id="@+id/imageViewBurger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-28dp"
        android:src="@mipmap/ic_launcher" />

    <ListView

        android:id="@+id/listViewIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionBurger"

        android:textColor="@color/cardview_light_background">


    </ListView>

    <TextView
        android:id="@+id/descriptionBurger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBurger"
        android:layout_marginTop="5dp"
        android:text="Description"
        android:textColor="#a9a9a9"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/titleBurger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewBurger"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/cardview_light_background"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>
